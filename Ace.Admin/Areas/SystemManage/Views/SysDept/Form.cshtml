@using Ace.Dto;
@model DeptDto;
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<script>
    $(function () {
        initSearchControl({
            id: 'parentDept',
            name: 'ParentID',
            value: '@Model.ParentID',
            nullValue: 0,
            displayText: '@Html.Raw(Model.ParentName)',
            dataSource: @Html.Raw(this.ViewBag.deptList),
            colModel: [
                { label: 'ID', name: 'DeptID', width: 60, key: true },
                { label: '部门编码', width: 70, name: 'Code' },
                { label: '单位名称', name: 'DeptName' }
            ]
        });
    });
    function submitData() {
        return {
            url: "@Url.Action("Form")",
            success: function (data) {
                if (data.code != 200) {
                    alert(data.msg);
                    this.close = false;
                }
            }
        };
    }
</script>
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal" role="form">
                <div class="space"></div>
                <input type="hidden" name="DeptID" value="@Model.DeptID" />
                <div class="form-group">
                    <label class="col-sm-3 control-label">ID</label>
                    <div class="col-sm-9">
                        <input id="txtId" readonly type="text" class="col-sm-10 col-xs-12" />
                        <script>
                            var id = $("form input[name='DeptID']").val();
                            if (id == 0)
                                $("#txtId").val("新增");
                            else
                                $("#txtId").val(id);
                        </script>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">部门名称</label>
                    <div class="col-sm-9">
                        <input type="text" name="DeptName" value="@Model.DeptName" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">上级部门</label>
                    <div class="col-sm-9">
                        <input type="text" id="parentDept" displaymember='DeptName' valuemember='DeptID' autocomplete="off" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">部门编码</label>
                    <div class="col-sm-9">
                        <input type="text" name="Code" value="@Model.Code" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">排序码</label>
                    <div class="col-sm-9">
                        <input type="text" name="Sort" value="@Model.Sort" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>