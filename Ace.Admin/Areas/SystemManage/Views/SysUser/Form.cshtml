@using Ace.Dto;
@model UserDto;
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<style>
    .ui-selectmenu-button {
        width: 100% !important;
    }
</style>
<script>
    $(function () {
        initSearchControl({
            id: 'txtDept',
            name: 'DeptID',
            value: '@Model.DeptID',
            nullValue: 0,
            displayText: '@Html.Raw(Model.DeptName)',
            dataSource: @Html.Raw(this.ViewBag.deptList),
            colModel: [
                { label: 'ID', name: 'DeptID', width: 60, key: true },
                { label: '部门编码', width: 70, name: 'Code' },
                { label: '单位名称', name: 'DeptName' }
            ]
        });
    });
    $(function () {
        $("#avatarSelect").change(function () {
            var obj = $("#avatarSelect")[0].files[0];
            var fr = new FileReader();
            fr.onload = function () {
                $("#avatarPreview").attr('src', this.result);
                $("form [name=avatar]").val(this.result);
            };
            fr.readAsDataURL(obj);
        });
    });
    function submitData() {
        return {
            url: "@Url.Action("Form")",
            success: function (data) {
                if (data.code != 200) {
                    alert(data.msg);
                    this.close = false;
                }
            }
        };
    }
</script>
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal" role="form">
                <div class="space"></div>
                <input type="hidden" name="UserID" value="@Model.UserID" />
                <div class="form-group" style="margin-bottom: 0px">
                    <div class="col-sm-9 col-xs-9">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">ID</label>
                            <div class="col-sm-8">
                                <input id="txtId" readonly type="text" class="col-sm-10 col-xs-11" />
                                <script>
                                    var id = $("form input[name='UserID']").val();
                                    if (id == 0)
                                        $("#txtId").val("新增");
                                    else
                                        $("#txtId").val(id);
                                </script>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">用户姓名</label>
                            <div class="col-sm-8">
                                <input type="text" name="UserName" value="@Model.UserName" class="col-sm-10 col-xs-11" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">工号</label>
                            <div class="col-sm-8">
                                <input type="text" name="Code" value="@Model.Code" class="col-sm-10 col-xs-11" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-3" style="margin-left: -10%;">
                        <div>
                            <input id="avatarSelect" type="file" style="display: none">
                            <input name="avatar" type="hidden" value="@ViewBag.avatar" />
                            <img id="avatarPreview" src="@ViewBag.avatar" style="width: 90px; height: 90px; border: 1px solid #d5d5d5;" />
                        </div>
                        <div class="btn-group" style="margin-right:-5px;">
                            <button class="btn btn-sm btn-primary" onclick="$('#avatarSelect').click();return false;">
                                <i class="fa fa-plus-circle bigger-110"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="$('#avatarPreview').attr('src','');$('form [name=avatar]').val('');return false;">
                                <i class="fa fa-minus-circle bigger-110"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">所属部门</label>
                    <div class="col-sm-9">
                        <input type="text" id="txtDept" displaymember='DeptName' valuemember='DeptID' autocomplete="off" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">登录账号</label>
                    <div class="col-sm-9">
                        <input type="text" name="LoginName" value="@Model.LoginName" autocomplete="off" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">登录密码</label>
                    <div class="col-sm-9">
                        <input type="password" name="Password" value="@Model.Password" autocomplete="off" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">性别</label>
                    <div class="col-sm-9">
                        <div class="col-sm-10 col-xs-12" style="padding:0">
                            <select name="Sex" class="form-control">
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                            <script>$("form [name=Sex]").val("@Html.Raw(Model.Sex)").selectmenu();</script>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">出生日期</label>
                    <div class="col-sm-9">
                        <input type="text" name="Birth" value="@Model.Birth" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">备注</label>
                    <div class="col-sm-9">
                        <input type="text" name="Remark" value="@Model.Remark" class="col-sm-10 col-xs-12" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">角色</label>
                    <div class="col-sm-9">
                        <select name="RoleIdList" class="multiselect" multiple="multiple">
                            @{
                                foreach (RoleDto role in ViewBag.roleList)
                                {
                                    <option value="@role.RoleID" @Html.Raw(Model.RoleIdList.Contains(role.RoleID) ? "selected" : "")>@role.RoleName</option>
                                }
                            }
                        </select>
                        <script>$("form [name=RoleIdList]").initMultiSelect();</script>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>